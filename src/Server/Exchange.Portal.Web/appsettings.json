{
  "Logging": {
    "LogLevel": {
      "Default": "Debug"
    },
    "NLog": {
      "IncludeScopes": true,
      "RemoveLoggerFactoryFilter": true
    }
  },
  "NLog": {
    "autoReload": true,
    "throwConfigExceptions": true,
    "internalLogLevel": "Info",
    "internalLogFile": "${basedir}/internal-nlog.txt",
    "extensions": [
      {
        "assembly": "NLog.Web.AspNetCore"
      },
      {
        "assembly": "Logtail"
      }
    ],
    "time": {
      "type": "AccurateUTC"
    },
    "default-wrapper": {
      "type": "AsyncWrapper",
      "overflowAction": "Block"
    },
    "targets": {
      "own-console": {
        "type": "ColoredConsole",
        "rowHighlightingRules": [
          {
            "condition": "level == LogLevel.Error",
            "foregroundColor": "Red"
          },
          {
            "condition": "level == LogLevel.Fatal",
            "foregroundColor": "Red",
            "backgroundColor": "White"
          }
        ],
        "wordHighlightingRules": [
          {
            "regex": "on|off",
            "foregroundColor": "DarkGreen"
          },
          {
            "condition": "level == LogLevel.Debug",
            "text": "[TEST]",
            "foregroundColor": "Blue"
          }
        ]
      }
    },
    "rules": [
      {
        "logger": "*",
        "minLevel": "Trace",
        "writeTo": "own-console"
      },
      {
        "logger": "Microsoft.*",
        "maxLevel": "Info",
        "final": true
      },
      {
        "logger": "*",
        "minLevel": "Debug",
        "writeTo": "own-console, logtail",
        "filterDefaultAction": "Log",
        "filters": {
          "whenRepeated": {
            "layout": "${message}",
            "action": "Ignore"
          }
        }
      }
    ]
  },
  "AllowedHosts": "*",
  "BinanceClient": {
    "Url" : "https://api.binance.com/api/v3/ticker/price?symbol="
  },
  "InitialTokens": {
    "Tokens": [
      {
        "Symbol": "BTC",
        "Name": "Bitcoin"
      },
      {
        "Symbol": "XMR",
        "Name": "Monero"
      },
      {
        "Symbol": "ZEC",
        "Name": "Zcash"
      },
      {
        "Symbol": "TRX",
        "Name": "Tron"
      },
      {
        "Symbol": "USDT",
        "Name": "Tether ERC20"
      },
      {
        "Symbol": "LTC",
        "Name": "Litecoin"
      }
    ]
  }
}
